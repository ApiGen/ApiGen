{layout '@layout.latte'}

{block title}{$pageTitle}{/block}

{block content}
    <h1>{$pageTitle}</h1>

    <table class="summary table table-bordered table-responsive table-striped">
        {foreach $interfaces as $interface}
            <tr>
                <td class="name">
                    <a href="{$interface|linkReflection}" n:class="$interface->isDeprecated() ? deprecated">{$interface->getName()}</a>
                </td>
            </tr>
        {/foreach}
    </table>
{/block}
